<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sincronizador.controller.AssociacaoController">

    <!-- ============ TÍTULO SUPERIOR ============ -->
    <top>
        <Label text="Associação de Imagens de Produtos"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 10;" />
    </top>

    <!-- ============ CENTRO (LISTA) ============ -->
    <center>
        <VBox spacing="10" padding="15">

            <Label text="Produtos:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <!-- Lista dos produtos -->
            <TableView fx:id="tblProdutos" prefHeight="300">
                <columns>

                    <TableColumn fx:id="colModelo" text="Modelo" prefWidth="170"/>
                    <TableColumn fx:id="colClube" text="Clube" prefWidth="130"/>
                    <TableColumn fx:id="colTamanho" text="Tamanho" prefWidth="100"/>
                    <TableColumn fx:id="colStatus" text="Imagem" prefWidth="100"/>

                </columns>
            </TableView>

        </VBox>
    </center>

    <!-- ============ ÁREA DE AÇÃO (BASE) ============ -->
    <bottom>
        <HBox alignment="center" spacing="20" padding="15">

            <Button fx:id="btnSelecionarImagem"
                    text="Selecionar Imagem"
                    style="-fx-font-size: 14; -fx-padding: 6 14;"
                    onAction="#selecionarImagem"/>

            <Button fx:id="btnAssociar"
                    text="Associar / Substituir"
                    style="-fx-font-size: 14; -fx-padding: 6 14;"
                    onAction="#salvarAssociacao"
                    disable="true"/>

            <Button text="Voltar"
                    style="-fx-font-size: 14; -fx-padding: 6 14;"
                    onAction="#voltarTela"/>

        </HBox>
    </bottom>

</BorderPane>
